                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                            <!--android:id="@+id/textView"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginRight="8dp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:text="Total Outstanding Amount : "-->
                            <!--android:textAlignment="textEnd"-->
                            <!--android:textColor="@color/colorPrimaryText" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/tvTotalOutstandingAmount"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="8dp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:text="Rs. 0.00"-->
                            <!--android:textAlignment="textStart"-->
                            <!--android:textColor="@color/colorPrimaryText" />-->
                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="clip_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSalesOrderTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:text="Total Return Amount : "
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryText" />

                        <TextView
                            android:id="@+id/tvNetTotalAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:text="Rs. 0.00"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimaryText" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/accent"
                android:elevation="2dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Confirm Return Note"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />

        </LinearLayout>
    </ScrollView>


